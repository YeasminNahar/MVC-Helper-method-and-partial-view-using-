@{
    ViewBag.Title = "Myindex";
}

<h2>Myindex</h2>

@using (Html.BeginForm())
{
    <style>
        body {
            font-family: Arial;
            background-color: #f9f9f9;
            color: #333;
            padding: 20px;
        }
        fieldset {
            border: 1px solid #ddd;
            padding: 20px;
            margin-bottom: 20px;
            background-color: #fff;
        }
        legend {
            font-size: 1.2em;
            font-weight: bold;
            color: #333;
            margin-bottom: 10px;
        }
        p {
            margin-bottom: 15px;
        }
        label {
            display: inline-block;
            width: 120px;
            font-weight: normal;
            color: #555;
        }
        input[type="text"],
        input[type="password"]
         {
            width: 200px;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 3px;
            font-size: 14px;
        }
        input[type="checkbox"],
        input[type="radio"] {
            margin-left: 10px;
        }
        input[type="submit"] {
            background-color: #5cb85c;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
            font-size: 14px;
        }
         input[type="submit"]:hover {
              background-color: blueviolet;
            }
    </style>
    <div>
        <fieldset>
            <legend>Student Info</legend>
         <p>
                <label ="userName">Student Name:</label>
                @Html.TextBox("userName")
            </p>
            <p>
                <label="password">Password:</label>
                @Html.Password("password")
            </p>
            <p>
                <label="New">New Student:</label>
                @Html.CheckBox("New")
                <label="old">Old Student:</label>
                @Html.CheckBox("old")
            </p>
            <p>
                <label="GenderMale">Male:</label>
                @Html.RadioButton("Gender", "Male")
                <label="GenderFemale">Female:</label>
                @Html.RadioButton("Gender", "Female")
            </p>
            <p style=width:20px;>
                <label="Details"> Details:</label>
                @Html.TextArea("Details")
            </p>
        </fieldset>
        <p>
            <input type="submit" value="Submit">
        </p>
    </div>
}
